body
    font-family arial, helvetica, sans-serif
    margin 0px
    #wrap
        width 550px
        margin-left 50px
        h2
            font-size 1.1em
            margin-bottom 0.5em
        .container
            float left
            margin-bottom 20px
            hourMarkWidth = 22px
            .hourMarks
                float left
                text-align right
                width hourMarkWidth
                margin-top 19px
                .hourMark
                    margin-right 5px
                    position relative
                    top -3px
                    width (hourMarkWidth - @margin-right)
                    float right
                    clear both
                    height 20px
                    font-size 0.8em
            .day
                margin-right 1px
                float left
                width (((@width - hourMarkWidth)/ 7) - 1)
                .bin
                    width (@width / 6)
                    height 10px
                    float left
                .dayPopis
                    width @width
                    text-align center
                    padding-bottom 3px
                    font-size 0.8em
                .minutesPopis
                    .minutePopis
                        float left
                        width (@width / 3)
                        font-size 0.7em
                        text-align center
            &.c2
            &.c3
                .dayPopis
                .minutesPopis
                    display none
                .hourMarks
                    margin-top 0px

.tooltip
    max-width 500px
